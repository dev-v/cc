<?xml version="1.0" encoding="UTF-8"?>
<!--
   pdf报表的xml文件的DTD描述文件
   其头部需使用下面的 DOCTYPE
   <!DOCTYPE report SYSTEM "csv.dtd">
 	fileName CDATA #REQUIRED
-->
<!ELEMENT report (filename,params?,sources?,page)>
<!ATTLIST report 
	type (xls|csv) "csv"
>

<!ELEMENT filename (#PCDATA)>
<!ATTLIST filename
	length CDATA #IMPLIED>

<!ELEMENT params (param*)>
<!ELEMENT param EMPTY>
<!-- 数据需使用的初始参数定义，可以在报表文件中写死，但外部传入一个同名的参数将覆盖xml文件中的值 -->
<!ATTLIST param
	name CDATA #REQUIRED
	value CDATA #IMPLIED>
<!ELEMENT sources (source+)>
<!ELEMENT source (sql|hibernate)>
<!ATTLIST source 
	name CDATA #REQUIRED
	type (sql|hibernate) "sql">
<!ELEMENT sql (fields)>
<!ATTLIST sql 
	value CDATA #REQUIRED>
<!ELEMENT fields (field+)>
<!ELEMENT field (#PCDATA|sql|hibernate)*>
<!ATTLIST field 
	name CDATA #REQUIRED>
<!ELEMENT hibernate (params?,fields?)>
<!ATTLIST hibernate
	dao CDATA #REQUIRED
	po CDATA #REQUIRED
	method CDATA #REQUIRED>
<!ELEMENT page (image*,table+)>
<!--        page属性            -->
<!ATTLIST page 
	align (left) "left"
	vAlign (middle) "middle"
	border (true) "true"
	borderType (thin) "thin"
	borderWeight CDATA "0.1"
	borderColor (black) "black"
	blackColor (white) "white"
	fontFamily (宋体) "宋体"
	fontStyle (normal) "normal"
	fontSize CDATA "10"
	fontColor (black) "black"
	width CDATA "595"
	height CDATA "842"
	ending CDATA "..."
	blank CDATA "-"
	margin CDATA "20"
			
	beginRow CDATA "0"
	beginCol CDATA "0"
	cols CDATA "0"
	pageType (a0|a1|a2|a3|a4|a5|a6|a7|a8|a9|a10|
				b0|b1|b2|b3|b4|b5|b6|b7|b8|b9|b10|
				arch_a|arch_b|arch_c|arch_d) "a4">
<!ELEMENT image EMPTY>
<!ATTLIST image
	beginx CDATA "0"
	beginy CDATA "0"
	endx CDATA #IMPLIED
	endy CDATA #IMPLIED
	transparence CDATA "50"
	transparenceLeft CDATA "50"
	transparenceRight CDATA "50"
	width CDATA "100"
	height CDATA "100"
	src CDATA #IMPLIED>
<!ELEMENT table (tr+)>
<!--table属性
	sourceType (normal|subtr) "normal"
	sourceTrIndex CDATA  #IMPLIED
-->
<!ATTLIST table 
	ending CDATA #IMPLIED
	blank CDATA #IMPLIED>
<!ELEMENT tr (td+)>
<!ATTLIST tr 
	complement (true|false) "true"
	ending CDATA #IMPLIED
	blank CDATA #IMPLIED
	source CDATA #IMPLIED>
<!ELEMENT td (#PCDATA|table|img|labels|label)*>
<!--        td属性           -->
<!ATTLIST td 
	ending CDATA #IMPLIED
	blank CDATA #IMPLIED
	width CDATA "100"
	height CDATA "20"
	
	combine (true|false) "false"
	begin CDATA #IMPLIED
	length CDATA #IMPLIED
	colSpan (1) "1"
	rowSpan (1) "1"
	field CDATA #IMPLIED>
<!ELEMENT img (#PCDATA)>
<!ATTLIST img 
	width CDATA "100"
	height CDATA "100"
	src CDATA #REQUIRED>
<!ELEMENT labels EMPTY>
<!ATTLIST labels
	sourceType (sources|parent) "sources"
	source CDATA #REQUIRED
	label CDATA #REQUIRED
	value CDATA #REQUIRED>
<!ELEMENT label (#PCDATA)>
<!ATTLIST label
	value CDATA #REQUIRED>